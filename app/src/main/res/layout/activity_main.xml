<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.next.absolutepathine.MainActivity"
    android:background="#e2d8d8">

   <Button
       android:id="@+id/btn_internal"
       android:layout_width="@dimen/button_width"
       android:layout_height="wrap_content"
       android:text="Internal Path"
       android:layout_marginTop="@dimen/margin_top"
       android:background="@color/btn_background"/>
    <Button
        android:layout_alignParentRight="true"
        android:id="@+id/btn_external"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:text="External Path"
        android:background="@color/btn_background"
        android:layout_marginTop="@dimen/margin_top"/>
    <Button
        android:id="@+id/btn_internal_memory"
        android:layout_below="@id/btn_internal"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:text="Internal Memory"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@color/btn_background"/>
    <Button
        android:layout_below="@id/btn_external"
        android:id="@+id/btn_External_memory"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:text="External Memory"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@color/btn_background"/>
    <Button
        android:id="@+id/btn_create_file"
        android:layout_below="@id/btn_internal_memory"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:text="Create File"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@color/btn_background"/>
    <Button
        android:id="@+id/btn_delete_file"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_External_memory"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:text="Delete File"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@color/btn_background"/>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</RelativeLayout>
